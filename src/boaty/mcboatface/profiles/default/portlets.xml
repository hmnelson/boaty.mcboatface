<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">
  <!-- Extra portlets here  -->

  <portlet
    addview="boaty.mcboatface.portlets.DepartmentStudentsPortlet"
    title="Department Students Portlet"
    description="Menu of links for managing department students.">

    <!-- This will enable the portlet for right column,
    left column and the footer too.
    -->
    <for interface="plone.app.portlets.interfaces.IColumn" />

    <!--
    This will enable the portlet in the dashboard.
    -->
    <!--<for interface="plone.app.portlets.interfaces.IDashboard" />-->
    <assignment category="context" manager="plone.leftcolumn" name="portlets.DepartmentStudentsPortlet"
     type="boaty.mcboatface.portlets.DepartmentStudentsPortlet"/>
  </portlet>
  
  
</portlets>